generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String

  bookings Booking[]
}

model Room {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int
  createdAt DateTime @default(now())

  bookings Booking[]
}
